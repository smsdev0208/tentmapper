rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Marker photos (new) - anyone can read, controlled write
    match /marker-photos/{markerId}/{filename} {
      // Anyone can read photos
      allow read: if true;
      
      // Only allow image uploads under 5MB
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Legacy tent photos - keep for backwards compatibility
    match /tent-photos/{tentId}/{filename} {
      // Anyone can read photos
      allow read: if true;
      
      // Only allow image uploads under 5MB
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
